.radio
	font-size 20px
	font-weight bold

	padding 5px 0

	cursor pointer

	display inline-flex
	align-items center

	@media (max-width: 726px)
		font-size 18px

	@media (max-width: 425px)
		font-size 15px

.radio__control
	display none

.radio__tick
	sprite($radio)

	margin-right 5px

	flex-shrink 0

	line-height 25px
	text-indent -99999px

.radio__control:checked + .radio__tick
	sprite($radio_checked)